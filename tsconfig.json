{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "node",
        "sourceMap": true,
    },
    "include": [
        "Gulpfile.ts"
    ]
}