{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@controllers_dir/*": [
                "controllers/*"
            ],
            "@routes_dir/*": [
                "routes/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@models_dir/*": [
                "models/*"
            ],
            "@common/*": [
                "common/*"
            ]
        }
    },
    "include": [
        "common/**/*",
        "config/**/*",
        "controllers/**/*",
        "models/**/*",
        "routes/**/*",
        "views/**/*",
        "app.ts"
    ]
}