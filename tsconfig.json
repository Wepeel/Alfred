{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "@controllers_dir/*": [
                "controllers/*"
            ],
            "@routes_dir/*": [
                "routes/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}