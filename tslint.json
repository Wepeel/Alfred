{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "generated/**",
            "config/**"
        ]
    },
    "jsRules": {},
    "rules": {
        "trailing-comma": [
            false
        ],
        "max-line-length": {
            "options": [
                120
            ]
        },
        "semicolon": [
            true,
            "always"
        ]
    },
    "rulesDirectory": []
}